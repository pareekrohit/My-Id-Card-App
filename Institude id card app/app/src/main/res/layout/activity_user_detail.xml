<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".UserDetail"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#4c98a5fb"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/linerLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtInstitudeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"

                android:ellipsize="end"
                android:maxLines="2"
                android:text="Select Institude Name :"
                android:textColor="#000000"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/spinnerIntitudeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txtInstitudeName"
                android:layout_weight="1.5" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/img_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linerLayout1"
            android:layout_marginTop="5dp"
            android:background="#ece9f7"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:background="#c4c4c4"
                android:src="@drawable/b" />

            <ImageButton
                android:id="@+id/btnSelectPic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/img_profile"
                android:layout_alignEnd="@+id/img_profile"
                android:background="#c4c4c4"
                android:src="@drawable/camera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSelectPic"
                android:gravity="center"
                android:text="(Only .jpg image upto 1Mb Size)"
                android:textColor="#ff0000"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_pic"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"

                android:ellipsize="end"
                android:maxLines="3"
                android:text="Name of Student :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:hint="@string/full_name"
                android:inputType="textCapWords" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtName"
            android:layout_marginTop="10dp"
            android:background="#c4c4c4" />

        <LinearLayout
            android:id="@+id/txtClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"

                android:ellipsize="end"
                android:maxLines="2"
                android:text="Class:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerClass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/txtClass"
                android:layout_weight="1.4"
                android:entries="@array/clasess" />

            <TextView
                android:id="@+id/txtDivision"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_weight="0.8"

                android:ellipsize="end"
                android:maxLines="2"
                android:text="Division:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerDivision"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/txtDivision"
                android:layout_weight="1.2"
                android:entries="@array/Division" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtClass"
            android:layout_marginTop="10dp"
            android:background="#c4c4c4" />

        <LinearLayout
            android:id="@+id/txtDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"

                android:ellipsize="end"
                android:maxLines="2"
                android:text="DOB:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edDOB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1.5"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtBlood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"

                android:ellipsize="end"
                android:maxLines="3"
                android:text="Blood:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerBlood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1.3"
                android:entries="@array/blood" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtDOB"
            android:layout_marginTop="10dp"
            android:background="#c4c4c4" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"

                android:ellipsize="end"
                android:maxLines="2"
                android:text="Email :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1.5"
                android:inputType="textEmailAddress"
                />
        </LinearLayout>
        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="10dp"
            android:background="#c4c4c4" />

        <LinearLayout
            android:id="@+id/txtMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view5"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"

                android:ellipsize="end"
                android:maxLines="2"
                android:text="Mobile :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edMobile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1.5"
                android:inputType="number"
                android:maxLength="10" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtMobile"
            android:layout_marginTop="10dp"
            android:background="#c4c4c4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view4"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"

                android:ellipsize="end"
                android:maxLines="2"
                android:text="Address :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edAddress"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1.5"
                android:inputType="textImeMultiLine" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>